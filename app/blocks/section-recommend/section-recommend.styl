.section
	&_recommend
		padding-top 43px
		padding-bottom 69px
		.section__in
			position relative
.recommend
	font-size 0
	&__item
		margin-left 50px
		padding 4px 4px 4px
		display inline-block
		size 250px 333px
		background-color $white
		font-iskrareg(18px,21px)
		border-radius 13px
		box-shadow 0.15625rem 0.26875rem 6px rgba(0, 0, 0, 0.3)
		&:first-child
			margin-left 0
	&__link
		position relative
		size 242px 325px
		display block
		border 1px solid #90aa3c
		border-radius 10px
	&__image
			size 242px 325px
		img
			width 240px
			height auto
			display block
			border-radius 10px
	&__info
		position absolute
		left 0
		right 0
		bottom 0
		height 120px
		padding 0 0 0 0
		background-color rgba(255,255,255,.9)
		border-radius 0 0 10px 10px
	&__info-top
		position relative
		padding 6px 20px 9px 9px
		min-height 40px
		clearfix()
	&__info-bottom
		height 40px
		position relative
		clearfix()
	&__title
		max-width 140px
		margin-right 96px
		font-iskrareg(18px,21px)
		color #3f4b1a
		text-overflow ellipsis
	&__price
		position absolute
		top 10px
		right 20px
		text-align right
	&__price-val
		margin-bottom 4px
		font-gosta(2.25rem, 1.5rem)
		color #90aa3c
		text-transform uppercase
	&__price-text
		font-iskrareg(14px,16px)
		color #3f4b1a

.section__recommend-icon-left
	position absolute
	top 146px
	left -352px
	width 200px
	height 200px
	opacity 0
	transition opacity .3s ease
	+hd()
		opacity 1
		width 200px
		height 200px
		background url('../images/recommend_icon_left.png') no-repeat
		background-size contain
		z-index -1
		+retina()
			background url('../images/recommend_icon_left_2x.png') no-repeat
			background-size contain

