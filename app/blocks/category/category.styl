.catalog
	&__info
		left 5px
		right 5px
		bottom 4px
		// min-height 100%
		background-color rgba(255,255,255,.0)
		// background-color rgba(255,255,255,.9)
	&__info-w
		position absolute
		left 1px
		right 1px
		bottom 1px
		// height 120px
		padding 0 0 0 0
		background rgba(255,255,255,.9)
		border-radius 0 0 10px 10px
		&_category-main
			padding-bottom 4px
	&__info-top
		position relative
		padding 6px 20px 9px 9px
		min-height 72px
		clearfix()
	&__info-bottom
		height 40px
		position relative
		clearfix()
		.quant
			position relative
			top 6px
			margin-top 7px
			margin-left 36px
	&__title
		max-width 140px // change at integration
		margin-right 96px // change at integration
		font-iskrareg(18px,21px)
		color #3f4b1a
		&_category-main
			margin-right auto
			max-width 100%
	&__price
		position absolute
		top 10px
		right 20px
		text-align right
	&__price-val
		margin-bottom 4px
		font-gosta(2.25rem, 1.5rem)
		color #90aa3c
		text-transform uppercase
	&__price-text
		font-iskrareg(14px,16px)
		color #3f4b1a

.view
	margin-top 23px
	margin-bottom 29px
	height 36px
	clearfix()
	&__w
		float right
		font-size 0
	&__grid
		// margin-top 1px
		display inline-block
		vertical-align top
		text-indent -9999px
		sprite($grid_view_action)
		+retina()
			sprite2($grid_view_action_2x)
		&_active
			margin-top 1px
			margin-left -1px
			sprite($grid_view)
			+retina()
				sprite2($grid_view_2x)
	&__list
		margin-left 17px
		display inline-block
		vertical-align top
		text-indent -9999px
		sprite($list_view_active)
		+retina()
			sprite2($list_view_active_2x)
		&_active
			margin-top 1px
			margin-left 19px
			sprite($list_view)
			+retina()
				sprite2($list_view_2x)
