.header
	position fixed
	top 0
	left 0
	width 100%
	height 50px
	background-color $black
	background-color rgba(0,0,0,.7)
	z-index 100
	&__in
		padding-top 11px
		padding-bottom 11px
		height 50px
		clearfix()
	&__controls
		margin-left 158px
		max-width 296px
		float left
	&__auth
		display inline-block
	&__auth-link
		border-bottom 1px solid transparent
		display inline-block
		font-iskralght(18px, 1)
		color $white
		text-decoration none
		transition border .2s ease
		&:hover
			border-bottom 1px solid $white
	&__sep
		padding 0 5px
		display inline-block
		color $white


.basket
	position relative
	margin-top 6px
	display inline-block
	&__link
		margin-right 13px
		margin-left 16px
		border-bottom 1px solid transparent
		display inline-block
		font-iskralght(18px,1)
		color $white
		text-decoration none
		transition border .2s ease
		&:hover
			border-bottom 1px solid $white
	&__dropdown
		position absolute
		top 33px
		left 0
		width 470px
		display none
		padding 7px 15px 10px 15px
		background-color rgba(0,0,0,.7)
		border-radius 0 0 13px 13px
		&_active
			display block
	&__list
		border 1px solid $white
		border-width 0 0 1px
	&__item
		margin-bottom 10px
		display table
		width 100%
		font-iskralght(18px,21px)
		color $white
	&__item-title
		display table-cell
		width 270px
		text-align left
	&__item-quant
		padding-right 12px
		display table-cell
		width 64px
		text-align right
		vertical-align middle
	&__item-price
		display table-cell
		width 85px
		text-align center
		vertical-align middle
	&__bottom
		padding-top 8px

	&__row
		display table
		font-iskralght(18px,21px)
		color $white
		clearfix()
	&__row-i
		display table-cell
		&_title
			width 348px
			text-align right
		&_val
			width 92px
			text-align center

.search
	margin-top 5px
	// margin-left 28px
	margin-right 0px
	max-width 150px
	float right
	&__input
		float left
		input
			padding 0 9px
			width 123px
			height 24px
			background #FFF
			font-iskralght(18px,1)
			color #999
			border 1px solid #6d802d
			border-width 1px 0 1px 1px
			border-radius 10px 0 0 10px
	&__submit
		position relative
		float right
		padding 3px 8px 5px 5px
		width 27px
		height 24px
		background-color #6d802d
		background-image linear-gradient(to top, #6c7f2d 0%, #90aa3c 100%)
		border 1px solid #6d802d
		border-width 1px 1px 1px 0
		border-radius 0 9px 9px 0
		// text-indent -9999px
	&__submit-icon
		position absolute
		top 3px
		left 4px
		content ""
		display block
		sprite2($search_icon_2x)


